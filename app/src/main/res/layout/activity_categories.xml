                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Served with stew"

                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Pastry"

                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Italian"

                />
